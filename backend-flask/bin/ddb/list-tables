#! /usr/bin/bash

set -e # stop if it fails at any point.

CYAN="\033[1;36m"
NO_COLOR="\033[0m"
LABEL="dynamodb-list-table"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

if [ "$1" = "prod" ];
then
    ENDPOINT_URL=""
else
    ENDPOINT_URL="--endpoint-url=http://localhost:8000"
fi

aws dynamodb list-tables $ENDPOINT_URL \
    --query TableNames \
    --output table
