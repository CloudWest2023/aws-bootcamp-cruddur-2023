#! /usr/bin/bash

# NO_DB_CONNECTION_URL=$(sed 's/\/cruddur//g' <<< "$CONNECTION_URL")
# psql $NO_DB_CONNECTION_URL -c "DROP DATABASE cruddur_ubuntu;"

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-drop"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

# NO_DB_CONNECTION_URL=$(sed 's/\/your_db_name//g' <<<"$CONNECTION_URL_POSTGRES")
NO_DB_CONNECTION_URL=$(sed 's/\/cruddur_ubuntu//g' <<<"$CONNECTION_URL_POSTGRES")
echo $NO_DB_CONNECTION_URL
# echo $CONNECTION_URL_POSTGRES
psql $NO_DB_CONNECTION_URL -c "DROP DATABASE cruddur_ubuntu;"
